<div class="container text-center m-5"">
  <h1>New Game</h1>
  <p>Try to find the longuest english word with the letters under</p>
    <ul id="liste">
      <% @letters.each do |letter| %>
          <li id ="letter"><%= letter %></li>
      <% end %>
    </ul>

  <form action="/score" method="POST" data-turbo="false" class="input-group mb-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" placeholder="Your word" class="form-control">
    <%= hidden_field_tag 'letters', @letters %>
    <input type="submit" value="Submit" class="btn btn-outline-secondary">
    <!-- ... -->
  </form>
</div>
